block content  
  h2#rank(data-rank=rank) #{rank}ランク
  #max(data-max=max)
  #time(data-time=time)
  ul 参加者
    li #{userName}
  hr
  h4#Q.text-center
  #countdown-bar
  .cor
    .cor-item 正答率：
    .cor-item#cor-rate
  p#quiz-area.mb-5
